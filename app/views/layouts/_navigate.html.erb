        border-radius: 10px;
    }

    .bar .bar-group{
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        padding: 0px;
        gap: 110px;

        position: absolute;
        width: 310px;
        height: 32.91px;
        left: 20px;
        top: 8px;

    }

    .bar .bar-group .left{
        width: 30px;
        height: 30px;


        /* Inside auto layout */

        flex: none;
        order: 0;
        flex-grow: 0;
    }

    .bar .bar-group .center{
        width: 30px;
        height: 30px;


        /* Inside auto layout */

        flex: none;
        order: 1;
        flex-grow: 0;
    }
    .bar .bar-group .right{
        width: 30px;
        height: 30px;


        /* Inside auto layout */

        flex: none;
        order: 2;
        flex-grow: 0;
    }
