    .navbar{
        position:fixed;
        margin-bottom: 1rem;
        box-shadow: 5px 10px 15px #3535356b;
        border-radius: 10px;
        width: 450px;
        left: calc(50% - 450px/2);
        bottom:0;
    }



    .bar-container{
        position: absolute;
        width: 375px;
        height: 67px;
        left: calc(50% - 375px/2);
        top: calc(50% - 67px/2 + 300px);

    }

    .bar{
